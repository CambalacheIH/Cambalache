<form action="/profile/<%= user._id %>" method="POST">
  Name:
  <input type="text" name="name" value="<%= user.name %>">
  Surname:
  <input type="text" name="surname" value="<%= user.surname %>">

<br>

Preferencias de búsqueda:

<br>

Punto de recogida:
<br>

Categorías:<br><br>
  <select multiple="multiple" id="categories" name="categories">

    <% categories.forEach((category) => { %>
        <% if (user.categories.includes(category)) { %>
          <option value="<%= category.toLowerCase() %>" selected ><%= category %></option>
        <% } else { %>
          <option value="<%= category.toLowerCase() %>" ><%= category %></option>
        <% } %>
    <% }) %>
  </select>
<br>

Rango de precios: <br>
Minimum price:
<input type="number" name="minPrice" value="<%= user.minPrice %>">€<br>
Maximum price:
<input type="number" name="maxPrice" value="<%= user.maxPrice %>">€<br>

<button type="submit">Save changes</button>
<a href="/profile">Leave without changes</a>

</form>


<br><form action="/logout">
  <button type="submit">Logout</button>
</form>

<script src="/js/jquery.multi-select.js" type="text/javascript"></script>
