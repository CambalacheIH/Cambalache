<div class="container signup-view login" id="signup">
  <h4>Sign up</h4>
  <div class="row">
    <form action="/signup" method="POST" class="col s12">
      <% if (typeof(error) != 'undefined' && error.email) { %>
        <p><%= error.email %></p>
      <% } %>
      <% if (typeof(error) != 'undefined' && error.name) { %>
        <p><%= error.name %></p>
      <% } %>
      <% if (typeof(error) != 'undefined' && error.password) { %>
        <p>Your password needs to have at least 6 letters, numbers or symbols</p>
      <% } %>
      <div class="row">
        <div class="input-field col s12">
          <input id="name-sign" type="text" name="name" class="validate" required>
          <label for="name-sign">Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="email-sign" type="email" name="email" class="validate" required>
          <label for="email-sign">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password-sign" type="password" name="password" class="validate" required>
          <label for="password-sign">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="col s12 submit-container">
          <button class="btn btn-cambalache btn-config" type="submit" name="action">
            <i class="material-icons left">send</i>Submit
          </button>
        </div>
      </div>
    </form>
  </div>
</div>